<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration >

	<configuration>
		<appender class="ch.qos.logback.core.ConsoleAppender"
			name="STDOUT">
			<encoder>
				<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
			</encoder>
		</appender>
		
		<logger name="net.slipp" level="DEBUG" />
		
		<logger name="org.spring.framework" level="INFO" />
		<logger name="org.spring.framework.web.bind.annotation.support.HandlerMethodInvoker" level="INFO" />
		<logger name="org.spring.framework.web.servlet.DispatcherServlet" level="INFO" />
		
		<root level="INFO">
			<appender-ref ref="STDOUT" />
		</root>
	</configuration>